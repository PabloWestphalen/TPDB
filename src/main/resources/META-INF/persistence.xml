<?xml version="1.0" encoding="UTF-8"?> 
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="jin" transaction-type="RESOURCE_LOCAL"> 
	<provider>org.hibernate.ejb.HibernatePersistence</provider> 
	<non-jta-data-source>java:jboss/datasources/MysqlDS</non-jta-data-source>
	<class>com.jin.tpdb.entities.Pessoa</class> 
	<class>com.jin.tpdb.entities.Artist</class> 
	<class>com.jin.tpdb.entities.User</class> 
	<class>com.jin.tpdb.entities.Album</class> 
		<properties> 
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" /> 
		<property name="hibernate.hbm2ddl.auto" value="update" /> 
		<property name="hibernate.show_sql" value="true" /> 
		<property name="hibernate.format_sql" value="true" /> 
		</properties> 
	</persistence-unit> 
</persistence>